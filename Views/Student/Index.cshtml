@model IEnumerable<StudentManagement.Models.Student>

<h2>Students List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Course)</th>
            <th>@Html.DisplayNameFor(model => model.First().Age)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Course</td>
            <td>@student.Age</td>
            <td>@student.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
